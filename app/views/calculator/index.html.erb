<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>

	$(document).ready(function(){

		var curShow = "";
		var exp = "";
		var restartFlag = false;
		$("#display").val(curShow);

		$(".numBtn").click(function(){
			if($("#clearBtn").val() == "ac")
			{
				$("#clearBtn").val("c");
				$("#clearBtn").html("C");
			}
			if( restartFlag == true)
			{
				exp = "";
				curShow = "";
				restartFlag = false;
			}

			if($(this).val() == "." && curShow == "")
			{
				curShow = "0.";
			}
			else if($(this).val() == "." && isLastDot(curShow ))
			{
				return;
			}
			else
			{
				curShow += $(this).val();
			}
			$("#display").val(curShow);
			
		});

		$(".opBtn").click(function(){
			exp += curShow;
			if(exp == "")
			{
				alert("Please input a number");
				return;
			}
			op = $(this).val();			
			restartFlag = false;

			if(isLastOp(exp))
			{
				if(op != "=")
				{
					exp = exp.substring(0 , exp.length - 1);
					exp += op;
				}
				else
				{
					$("#display").val(exp.substring(0 , exp.length - 1));
				}
			}
			else
			{
				res = eval(exp);
				$("#display").val(res);
				exp = res.toString();
				if(op != "=")
				{
					exp += op;
				}
				else
				{
					restartFlag = true;
					$("#clearBtn").val("ac");
					$("#clearBtn").html("AC");
				}
			}

			curShow = "";
		});

		$("#clearBtn").click(function(){
			if($(this).val() == "c")
			{
				curShow = "";
				$(this).val("ac");
				$(this).html("AC");
			}
			else
			{
				curShow = "";
				exp = "";
			}
			$("#display").val(curShow);
		});
	});

	function isLastOp(string)
	{
		lastItem = string[string.length - 1];
		if(lastItem == "+")
			return true;
		else if(lastItem == "-")
			return true;
		else if(lastItem == "*")
			return true;
		else if(lastItem == "/")
			return true;
		else
			return false;
	}

	function isLastDot(string)
	{
		lastItem = string[string.length - 1];
		if(lastItem == ".")
			return true;
		else 
			return false;
	}
</script>

