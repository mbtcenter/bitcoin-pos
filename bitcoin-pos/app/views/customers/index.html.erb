<h1>You need to pay <%= (params[:beer].to_i*0.0001.to_f+params[:water].to_i*0.0002.to_f+params[:champange].to_i*0.0003.to_f).to_s %> BTC<h1>
<h1>Please scan the qr code</h1>
<%= @address %>

<style type="text/css">
 table {
   border-width: 0;
   border-style: none;
   border-color: #0000ff;
   border-collapse: collapse;
 }
 td {
   border-width: 0;
   border-style: none;
   border-color: #0000ff;
   border-collapse: collapse;
   padding: 0;
   margin: 0;
   width: 10px;
   height: 10px;
 }
 td.black { background-color: #000; }
 td.white { background-color: #fff; }
</style>
<table>
 <% @qr.modules.each_index do |x| %>
   <tr>
     <% @qr.modules.each_index do |y| %>
       <% if @qr.dark?(x,y) %>
         <td class="black"/>
       <% else %>
         <td class="white"/>
       <% end %>
     <% end %>
   </tr>
 <% end %>
</table>